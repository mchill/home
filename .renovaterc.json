{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    ":separateMultipleMajorReleases",
    "group:allNonMajor",
    "workarounds:all"
  ],
  "schedule": ["before 3am on Saturday"],
  "includePaths": ["k8s/**"],
  "kubernetes": {
    "fileMatch": ["^k8s/.*\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "jitsi/jicofo",
        "jitsi/jvb",
        "jitsi/prosody",
        "jitsi/web"
      ],
      "versioning": "regex:^stable-(?<minor>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/hotio/qbittorrent"],
      "versioning": "regex:^release-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ]
}
